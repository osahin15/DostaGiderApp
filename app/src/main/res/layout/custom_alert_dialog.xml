<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En az"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/filterMinYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Örn. 2000"
            android:autofillHints="Örn. 2000"
            android:textColor="@color/black"
            android:maxLines="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:inputType="number"
            android:lines="1"
            android:maxLength="4"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En Çok"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"

            />
        <EditText
            android:id="@+id/filterMaxYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="number"
            android:hint="Örn. 2021"
            android:autofillHints="Örn. 2021"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:maxLength="4"
            android:lines="1"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>